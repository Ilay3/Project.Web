@model BatchDetailsViewModel
@{
    ViewData["Title"] = "Партия - " + Model.DetailName;
}

<div class="d-flex justify-content-between mb-4">
    <h1 class="h3">@Model.DetailName (@Model.Quantity шт)</h1>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Назад</a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">Подпартии</div>
            <div class="card-body">
                @foreach (var subBatch in Model.SubBatches)
                {
                    <div class="border p-3 mb-2">
                        <strong>Подпартия @subBatch.Id</strong> - @subBatch.Quantity шт (@subBatch.CompletionPercentage%)
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">Статистика</div>
            <div class="card-body">
                <p>Завершено: @Model.Statistics.CompletedStages/@Model.Statistics.TotalStages</p>
                <p>Эффективность: @Model.Statistics.EfficiencyPercentage%</p>
            </div>
        </div>
    </div>
</div>