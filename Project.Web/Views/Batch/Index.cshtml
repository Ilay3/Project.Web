@model List<BatchViewModel>
@{
    ViewData["Title"] = "Производственные партии";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>Производственные партии</h2>
            <p class="lead">Управление производственными заданиями</p>
        </div>
        <div class="col-auto">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createBatchModal">
                <i class="bi bi-plus"></i> Создать партию
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="batches-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Деталь</th>
                                    <th>Количество</th>
                                    <th>Дата создания</th>
                                    <th>Подпартии</th>
                                    <th>Статус</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var batch in Model)
                                {
                                    <tr>
                                        <td>@batch.Id</td>
                                        <td>@batch.DetailName</td>
                                        <td>@batch.Quantity</td>
                                        <td>@batch.Created.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>
                                            @if (batch.SubBatches?.Any() == true)
                                            {
                                                <span class="badge bg-info">@batch.SubBatches.Count подпартий</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Нет подпартий</span>
                                            }
                                        </td>
                                        <td>
                                            @{
                                                var totalExecutions = batch.SubBatches?.Sum(sb => sb.StageExecutions?.Count ?? 0) ?? 0;
                                                var completedExecutions = batch.SubBatches?.Sum(sb => sb.StageExecutions?.Count(se => se.Status == "Completed") ?? 0) ?? 0;
                                                var activeExecutions = batch.SubBatches?.Sum(sb => sb.StageExecutions?.Count(se => se.Status == "InProgress") ?? 0) ?? 0;

                                                var percent = totalExecutions > 0 ? (completedExecutions * 100 / totalExecutions) : 0;

                                                if (percent == 100)
                                                {
                                                    <span class="badge bg-success">Завершено</span>
                                                }
                                                else if (activeExecutions > 0)
                                                {
                                                    <span class="badge bg-primary">В производстве</span>
                                                }
                                                else if (completedExecutions > 0)
                                                {
                                                    <span class="badge bg-warning text-dark">Частично</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Не начато</span>
                                                }
                                            }

                                            @if (totalExecutions > 0)
                                            {
                                                <div class="progress mt-1" style="height: 5px;">
                                                    <div class="progress-bar" role="progressbar" style="width: @percent%;"
                                                         aria-valuenow="@percent" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                                <small class="text-muted">@completedExecutions из @totalExecutions этапов</small>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Details", "Batch", new { id = batch.Id })" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> Подробнее
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger delete-batch-btn"
                                                        data-id="@batch.Id"
                                                        data-detail="@batch.DetailName"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#deleteBatchModal">
                                                    <i class="bi bi-trash"></i> Удалить
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Модальное окно создания партии -->
<div class="modal fade" id="createBatchModal" tabindex="-1" aria-labelledby="createBatchModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createBatchModalLabel">Создание партии</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="create-batch-form" method="post" action="@Url.Action("Create", "Batch")">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="DetailId" class="form-label">Деталь</label>
                        <select class="form-select" id="DetailId" name="DetailId" required>
                            <option value="">Выберите деталь...</option>
                            <!-- Список деталей будет загружен через AJAX -->
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="Quantity" class="form-label">Количество</label>
                        <input type="number" class="form-control" id="Quantity" name="Quantity" min="1" required>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="SplitBatch">
                        <label class="form-check-label" for="SplitBatch">Разделить на подпартии</label>
                    </div>
                    <div id="subBatchContainer" class="d-none">
                        <div class="mb-3">
                            <label for="subBatchCount" class="form-label">Количество подпартий</label>
                            <div class="input-group">
                                <input type="number" class="form-control" id="subBatchCount" min="2" value="2">
                                <button class="btn btn-outline-secondary" type="button" id="generateSubBatches">Сгенерировать</button>
                            </div>
                        </div>
                        <div id="subBatchFields"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-primary">Создать партию</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Модальное окно удаления партии -->
<div class="modal fade" id="deleteBatchModal" tabindex="-1" aria-labelledby="deleteBatchModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteBatchModalLabel">Удаление партии</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" action="@Url.Action("Delete", "Batch")">
                <div class="modal-body">
                    <input type="hidden" id="deleteId" name="id">
                    <p>Вы уверены, что хотите удалить партию для детали <strong id="deleteDetailName"></strong>?</p>
                    <p class="text-danger">Это действие нельзя отменить.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-danger">Удалить</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Инициализация таблицы
            $('#batches-table').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Russian.json"
                },
                "pageLength": 25,
                "order": [[ 3, "desc" ]] // Сортировка по дате создания
            });

            // Загрузка списка деталей
            $.getJSON('/Detail/GetDetails', function(data) {
                var selectBox = $('#DetailId');
                selectBox.empty();
                selectBox.append('<option value="">Выберите деталь...</option>');

                $.each(data, function(index, detail) {
                    selectBox.append(`<option value="${detail.id}">${detail.name} (${detail.number})</option>`);
                });
            });

            // Управление формой подпартий
            $('#SplitBatch').change(function() {
                $('#subBatchContainer').toggleClass('d-none', !this.checked);
                if (this.checked) {
                    generateSubBatchFields();
                }
            });

            $('#generateSubBatches').click(generateSubBatchFields);

            // Первоначальная генерация полей подпартий
            function generateSubBatchFields() {
                const totalQuantity = parseInt($('#Quantity').val()) || 0;
                const subBatchCount = parseInt($('#subBatchCount').val()) || 2;

                if (totalQuantity > 0 && subBatchCount > 1) {
                    // Расчет примерного равного распределения
                    const baseQuantity = Math.floor(totalQuantity / subBatchCount);
                    const remainder = totalQuantity % subBatchCount;

                    // Генерация полей ввода
                    const container = $('#subBatchFields');
                    container.empty();

                    for (let i = 0; i < subBatchCount; i++) {
                        const quantity = i === 0 ? baseQuantity + remainder : baseQuantity;
                        container.append(`
                            <div class="mb-3">
                                <label class="form-label">Подпартия ${i+1}</label>
                                <input type="number" class="form-control subBatchQuantity"
                                       name="SubBatches[${i}].Quantity" value="${quantity}" min="1" required>
                            </div>
                        `);
                    }
                }
            }

            // Проверка суммы подпартий перед отправкой формы
            $('#create-batch-form').on('submit', function(e) {
                if ($('#SplitBatch').is(':checked')) {
                    const totalQuantity = parseInt($('#Quantity').val()) || 0;
                    let subBatchTotal = 0;

                    $('.subBatchQuantity').each(function() {
                        subBatchTotal += parseInt($(this).val()) || 0;
                    });

                    if (subBatchTotal !== totalQuantity) {
                        alert(`Сумма количества в подпартиях (${subBatchTotal}) не равна общему количеству (${totalQuantity})`);
                        e.preventDefault();
                        return false;
                    }
                }
            });

            // Обработчик кнопки удаления
            $('.delete-batch-btn').click(function() {
                var id = $(this).data('id');
                var detail = $(this).data('detail');

                $('#deleteId').val(id);
                $('#deleteDetailName').text(detail);
            });
        });
    </script>
}