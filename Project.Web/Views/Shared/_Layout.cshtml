<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Система управления производством</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Main" asp-action="Index">
                    <i class="bi bi-gear-wide-connected"></i>
                    Управление производством
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Main" asp-action="Index">
                                <i class="bi bi-speedometer2"></i> Главная панель
                            </a>
                        </li>

                        <!-- Производство -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-play-circle"></i> Производство
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Batch" asp-action="Index">
                                        <i class="bi bi-box"></i> Партии
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Queue" asp-action="Index">
                                        <i class="bi bi-list-ol"></i> Очередь этапов
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="History" asp-action="Index">
                                        <i class="bi bi-graph-up"></i> История
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Справочники -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-journal-bookmark"></i> Справочники
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Detail" asp-action="Index">
                                        <i class="bi bi-puzzle"></i> Детали
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Route" asp-action="Index">
                                        <i class="bi bi-diagram-3"></i> Маршруты изготовления
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Machine" asp-action="Index">
                                        <i class="bi bi-tools"></i> Станки
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="MachineType" asp-action="Index">
                                        <i class="bi bi-gear"></i> Типы станков
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="SetupTime" asp-action="Index">
                                        <i class="bi bi-clock"></i> Времена переналадки
                                    </a>
                                </li>
                                
                            </ul>
                        </li>
                    </ul>

                    <!-- Быстрые действия -->
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-lightning"></i> Быстрые действия
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="#" onclick="quickCreateBatch()">
                                        <i class="bi bi-plus-circle"></i> Новая партия
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="showActiveStages()">
                                        <i class="bi bi-play"></i> Активные этапы
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="refreshAllData()">
                                        <i class="bi bi-arrow-clockwise"></i> Обновить данные
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Система управления производством -
            <a asp-controller="Main" asp-action="Index">Главная</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Проверяем загрузку jQuery
        if (typeof jQuery === 'undefined') {
            console.error('jQuery не загружен!');
        } else {
            console.log('jQuery загружен успешно');
        }

        // Глобальные функции для быстрых действий
        function quickCreateBatch() {
            if (typeof $ !== 'undefined') {
                window.location.href = '/Main/Index#batches-pane';
            }
        }



        function refreshAllData() {
            if (typeof refreshData === 'function') {
                refreshData();
            } else {
                location.reload();
            }
        }

        function showNotifications() {
            alert('Функция уведомлений будет добавлена в следующей версии');
        }

        // Инициализация при загрузке страницы
        $(document).ready(function() {
            updateNotificationCount();
            setInterval(updateNotificationCount, 60000); // каждую минуту
        });

        function updateNotificationCount() {
            $('#notification-count').text('0');
        }
    </script>

</body>
</html>