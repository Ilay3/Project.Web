@model List<MachineTypeViewModel>
@{
    ViewData["Title"] = "Типы станков";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>Типы станков</h2>
            <p class="lead">Справочник типов производственного оборудования</p>
        </div>
        <div class="col-auto">
            <div class="btn-group" role="group">
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
                    <i class="bi bi-plus"></i> Добавить тип
                </button>
                <a href="@Url.Action("Index", "Machine")" class="btn btn-outline-secondary">
                    <i class="bi bi-tools"></i> Станки
                </a>
                <a href="@Url.Action("Index", "Route")" class="btn btn-outline-secondary">
                    <i class="bi bi-diagram-3"></i> Маршруты
                </a>
                <a href="@Url.Action("Index", "Main")" class="btn btn-outline-primary">
                    <i class="bi bi-house"></i> Главная
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="types-table">
                            <thead>
                                <tr>
                                    <th>Название типа</th>
                                    <th>Количество станков</th>
                                    <th>Используется в маршрутах</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var type in Model)
                                {
                                    <tr>
                                        <td>
                                            <i class="bi bi-gear-fill text-secondary me-2"></i>
                                            <strong>@type.Name</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-info machine-count" data-type-id="@type.Id">0</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary route-count" data-type-id="@type.Id">0</span>
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <button class="btn btn-sm btn-outline-primary edit-btn"
                                                        data-id="@type.Id" data-name="@type.Name"
                                                        data-bs-toggle="modal" data-bs-target="#editModal">
                                                    <i class="bi bi-pencil"></i> Изменить
                                                </button>
                                                <button class="btn btn-sm btn-outline-danger delete-btn"
                                                        data-id="@type.Id" data-name="@type.Name"
                                                        data-bs-toggle="modal" data-bs-target="#deleteModal">
                                                    <i class="bi bi-trash"></i> Удалить
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Шаблоны типов станков</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <button type="button" class="list-group-item list-group-item-action"
                                onclick="addTypeFromTemplate('Токарный станок')">
                            <i class="bi bi-gear text-primary me-2"></i>
                            <strong>Токарный станок</strong>
                            <div class="small text-muted">Для токарных операций</div>
                        </button>
                        <button type="button" class="list-group-item list-group-item-action"
                                onclick="addTypeFromTemplate('Фрезерный станок')">
                            <i class="bi bi-gear text-success me-2"></i>
                            <strong>Фрезерный станок</strong>
                            <div class="small text-muted">Для фрезерных операций</div>
                        </button>
                        <button type="button" class="list-group-item list-group-item-action"
                                onclick="addTypeFromTemplate('Сверлильный станок')">
                            <i class="bi bi-gear text-info me-2"></i>
                            <strong>Сверлильный станок</strong>
                            <div class="small text-muted">Для сверления отверстий</div>
                        </button>
                        <button type="button" class="list-group-item list-group-item-action"
                                onclick="addTypeFromTemplate('Контрольный стенд')">
                            <i class="bi bi-check-circle text-warning me-2"></i>
                            <strong>Контрольный стенд</strong>
                            <div class="small text-muted">Для контроля качества</div>
                        </button>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0">Статистика</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <h3 class="text-primary" id="total-types">@Model.Count</h3>
                            <small class="text-muted">Типов станков</small>
                        </div>
                        <div class="col-6">
                            <h3 class="text-success" id="total-machines">0</h3>
                            <small class="text-muted">Всего станков</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Модальное окно создания -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Добавить тип станка</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" action="@Url.Action("Create")">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Название типа станка</label>
                        <input type="text" name="Name" id="create-name" class="form-control"
                               placeholder="Например: Токарный станок" required>
                    </div>
                    <div class="form-text">
                        <i class="bi bi-info-circle"></i>
                        Название должно отражать функциональное назначение оборудования
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-primary">Создать</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Модальное окно редактирования -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Редактировать тип станка</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="edit-form" method="post">
                <div class="modal-body">
                    <input type="hidden" id="edit-id" name="Id">
                    <div class="mb-3">
                        <label class="form-label">Название типа станка</label>
                        <input type="text" id="edit-name" name="Name" class="form-control" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Модальное окно удаления -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Удаление типа станка</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Удалить тип станка <strong id="delete-name"></strong>?</p>
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    При удалении типа станка будут также удалены все связанные маршруты и станки.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                <form id="delete-form" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-danger">Удалить</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#types-table').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Russian.json"
                }
            });

            loadStatistics();

            $('.edit-btn').click(function() {
                $('#edit-id').val($(this).data('id'));
                $('#edit-name').val($(this).data('name'));
                $('#edit-form').attr('action', '@Url.Action("Edit")');
            });

            $('.delete-btn').click(function() {
                $('#delete-name').text($(this).data('name'));
                $('#delete-form').attr('action', '@Url.Action("Delete")/' + $(this).data('id'));
            });
        });

        function addTypeFromTemplate(name) {
            $('#create-name').val(name);
            $('#createModal').modal('show');
        }

        function loadStatistics() {
            $.get('/api/machines', function(machines) {
                $('#total-machines').text(machines.length);

                // Подсчитываем количество станков по типам
                const machineCountByType = {};
                machines.forEach(machine => {
                    machineCountByType[machine.machineTypeId] =
                        (machineCountByType[machine.machineTypeId] || 0) + 1;
                });

                $('.machine-count').each(function() {
                    const typeId = $(this).data('type-id');
                    $(this).text(machineCountByType[typeId] || 0);
                });
            });
        }
    </script>
}