@using Project.Contracts.ModelDTO
@model RouteDto
@{
    ViewData["Title"] = "Детали маршрута: " + Model.DetailName;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>Маршрут изготовления</h2>
            <h3 class="text-muted">@Model.DetailName</h3>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Index")" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left"></i> К списку маршрутов
            </a>
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Редактировать
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Этапы маршрута</h5>
                </div>
                <div class="card-body">
                    @if (Model.Stages.Any())
                    {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th width="10%">№</th>
                                            <th width="30%">Операция</th>
                                            <th width="25%">Тип станка</th>
                                            <th width="15%">Время на деталь (ч)</th>
                                            <th width="20%">Время переналадки (ч)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var stage in Model.Stages.OrderBy(s => s.Order))
                                    {
                                                <tr>
                                                    <td>
                                                        <span class="badge bg-primary fs-6">@stage.Order</span>
                                                    </td>
                                                    <td>
                                                        <strong>@stage.Name</strong>
                                                        <br><small class="text-muted">@stage.StageType</small>
                                                    </td>
                                                    <td>
                                                        <i class="bi bi-tools text-secondary me-1"></i>
                                                @stage.MachineTypeName
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-info">@stage.NormTime ч</span>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-warning text-dark">@stage.SetupTime ч</span>
                                                    </td>
                                                </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                    }
                    else
                    {
                            <div class="text-center p-5">
                                <i class="bi bi-diagram-3" style="font-size: 3rem; color: #6c757d;"></i>
                                <h4 class="mt-3">Этапы не добавлены</h4>
                                <p class="text-muted">Добавьте этапы в маршрут</p>
                                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                                    <i class="bi bi-plus"></i> Добавить этапы
                                </a>
                            </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Сводка по маршруту</h5>
                </div>
                <div class="card-body">
                    @{
                        var totalNormTime = Model.Stages.Sum(s => s.NormTime);
                        var totalSetupTime = Model.Stages.Sum(s => s.SetupTime);
                    }

                    <div class="row text-center mb-3">
                        <div class="col-6">
                            <h4 class="text-primary">@totalNormTime</h4>
                            <small class="text-muted">Общее время изготовления (ч)</small>
                        </div>
                        <div class="col-6">
                            <h4 class="text-warning">@totalSetupTime</h4>
                            <small class="text-muted">Общее время переналадки (ч)</small>
                        </div>
                    </div>

                    <div class="row text-center">
                        <div class="col-6">
                            <h4 class="text-info">@Model.Stages.Count</h4>
                            <small class="text-muted">Количество этапов</small>
                        </div>
                        <div class="col-6">
                            <h4 class="text-success">@(totalNormTime + totalSetupTime)</h4>
                            <small class="text-muted">Общее время (ч)</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Типы станков</h5>
                </div>
                <div class="card-body">
                    @{
                        var machineTypes = Model.Stages.GroupBy(s => s.MachineTypeName).ToList();
                    }

                    @if (machineTypes.Any())
                    {
                        @foreach (var group in machineTypes)
                        {
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span>@group.Key</span>
                                        <span class="badge bg-secondary">@group.Count() этап(ов)</span>
                                    </div>
                        }
                    }
                    else
                    {
                            <p class="text-muted">Этапы не добавлены</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>