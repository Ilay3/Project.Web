@model List<RouteViewModel>
@{
    ViewData["Title"] = "Маршруты изготовления";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>Маршруты изготовления</h2>
            <p class="lead">Управление технологическими маршрутами деталей</p>
        </div>
        <div class="col-auto">
            <div class="btn-group" role="group">
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="bi bi-plus"></i> Создать маршрут
                </a>
                <a href="@Url.Action("Index", "Detail")" class="btn btn-outline-secondary">
                    <i class="bi bi-box"></i> Детали
                </a>
                <a href="@Url.Action("Index", "MachineType")" class="btn btn-outline-secondary">
                    <i class="bi bi-gear"></i> Типы станков
                </a>
                <a href="@Url.Action("Index", "Main")" class="btn btn-outline-primary">
                    <i class="bi bi-house"></i> Главная
                </a>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="routes-table">
                    <thead>
                        <tr>
                            <th>Деталь</th>
                            <th>Этапы</th>
                            <th>Общее время</th>
                            <th>Время переналадки</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var route in Model)
                        {
                            var totalTime = route.Stages.Sum(s => s.NormTime);
                            var setupTime = route.Stages.Sum(s => s.SetupTime);

                            <tr>
                                <td>
                                    <strong>@route.DetailName</strong>
                                </td>
                                <td>
                                    <span class="badge bg-info">@route.Stages.Count этапов</span>
                                    <div class="small text-muted mt-1">
                                        @string.Join(" → ", route.Stages.OrderBy(s => s.Order).Select(s => s.Name))
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@totalTime ч</span>
                                </td>
                                <td>
                                    <span class="badge bg-warning text-dark">@setupTime ч</span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="@Url.Action("Details", new { id = route.Id })" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i> Подробнее
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = route.Id })" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Изменить
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger"
                                                onclick="deleteRoute(@route.Id, '@route.DetailName')">
                                            <i class="bi bi-trash"></i> Удалить
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Удаление маршрута</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Удалить маршрут для детали <strong id="delete-detail-name"></strong>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                <form id="delete-form" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-danger">Удалить</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#routes-table').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Russian.json"
                }
            });
        });

        function deleteRoute(id, detailName) {
            $('#delete-detail-name').text(detailName);
            $('#delete-form').attr('action', '@Url.Action("Delete")/' + id);
            $('#deleteModal').modal('show');
        }
    </script>
}